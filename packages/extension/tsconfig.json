{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "types": ["vite/client", "chrome", "node"],
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@wechatsync/core": ["../core/src"],
      "@wechatsync/core/*": ["../core/src/*"]
    },
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "include": ["src/**/*", "platforms/**/*"],
  "exclude": ["node_modules", "dist"]
}
